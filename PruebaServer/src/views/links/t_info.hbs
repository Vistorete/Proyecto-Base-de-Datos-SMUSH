<div class="container">
    <div class="row mt-5">
        <div class="col-md-5">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th colspan="6"><center>Partidas</center></th>
                    </tr>
                    <tr>
                        <th>ID</th>
                        <th>Player 1</th>
                        <th>Score1</th>
