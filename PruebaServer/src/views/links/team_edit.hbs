<h1>
    <center>Team</center>
</h1>
<div class="container">
    <div class="r">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    {{#each userEdit}}
                    <form action="/teams/edit/{{id}}" method="POST">
                        <div class="form-group"><input type="text" value="{{nombre}}" class="form-control" name="nombre"
                                placeholder="Nombre" autofocus></div>
                        <div class="form-group"><input type="text" value="{{tag}}" class="form-control" name="tag"
                                placeholder="Tag"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Save
                            </button>
                            {{/each}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>