
<h1>
    <center>Torneos Smash Ultimate</center>
</h1>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Organizador</th>
                        <th>Nombre</th>
                        <th>Fecha</th>
                        <th>Dirección</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                

                <tbody>
                    {{#each tournaments}}
                        <tr>
                            <td><a href="/users/profile/{{id_organizador}}"> {{username}}  </a></td>
                            <td><a href="/tournament/info/{{id}}"> {{nombre}} </a>    </td>
                            <td>{{fecha}}    </td>
                            <td> <a href="/local/"></a>   {{direccion}}    </td>
                            <td>
                                <a href="/tournament/delete/{{id}}" class="btn btn-danger">Borrar</a>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>

            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/tournament" method="post">
                <div class="form-group"><input type="number" name="id_organizador" placeholder="Id organizador" class="form-group"></div>
                <div class="form-group"><input type="text" name="nombre" placeholder="nombre del evento" class="form-group"></div>
                <div class="form-group"><input type="number" name="id_local" placeholder="id_local" class="form-group"></div>
                <div class="form-group"><input type="date" name="fecha" placeholder="Fecha" class="form-group"></div>
                <button type="submit" class="btn btn-primary">
                    Agregar torneo
                </button>
            </form>
                </div>
            </div>


        </div>
    </div>
</div>